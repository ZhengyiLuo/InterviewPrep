public class twitterChallenge {
    // int krakenCount(int m, int n) {
    // if (m == 1 || n == 1) {
    // return 1;
    // }
    //
    // return krakenCount(m, n - 1) + krakenCount(m - 1, n - 1) + krakenCount(m
    // - 1, n);
    // }

    int krakenCount(int m, int n) {
        int[][] matrix = new int[m][n];
        for (int i = 0; i < m; i++) {
            matrix[i][0] = 1;
        }

        for (int i = 0; i < m; i++) {
            matrix[i][0] = 1;
        }

        return krakenCount(m, n - 1) + krakenCount(m - 1, n - 1) + krakenCount(m - 1, n);
    }
}
