public class lintCode1 {
    public int partitionArray(int[] nums, int k) {
        if (nums.length == 0) {
            return 0;
        }
        int left = 0;
        int right = nums.length - 1;
        while (left < right) {
            if (nums[left] >= k) {
                int temp = nums[left];
                nums[left] = nums[right];
                nums[right] = temp;
                right--;
            } else {
                left++;
            }

        }
        
        if (nums[right] < k) {
            return right + 1;

        } else {
            return right;
        }

    }
}
